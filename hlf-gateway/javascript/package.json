{
  "name": "sparx",
  "version": "1.0.0",
  "description": "Sparx Api implemented in JavaScript",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "nyc mocha --recursive",
    "start": "node app.js"
  },
  "engineStrict": true,
  "author": "Hyperledger",
  "license": "Apache-2.0",
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "envfile": "^6.17.0",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.1",
    "fabric-ca-client": "^2.2.13",
    "fabric-network": "^2.2.13",
    "fs": "0.0.1-security",
    "http-errors": "^1.8.0",
    "https": "^1.0.0",
    "jade": "^1.9.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nodemon": "^1.19.4",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.4.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^8.19.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.3.0"
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "test/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  },
  "main": ".eslintrc.js"
}
